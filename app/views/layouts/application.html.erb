    </script>
    <script>
        $(function () {
            const hum = $('#hamburger, .close')
            const nav = $('.sp-nav')
            hum.on('click', function () {
                nav.toggleClass('toggle');
            });
        });
    </script>
  </head>

  <body>
    <header>
      <h1><a href="/">耳コピ支援ツール</a></h1>
      <nav class="pc-nav">
        <ul>
          <li><a href="/scales/search">スケールを調べる</a></li>
          <li><a href="/chords/search">コードを調べる</a></li>
          <li><a href="/scales/index">スケールを管理する</a></li>
          <li><a href="/chords/index">コードを管理する</a></li>
        </ul>
      </nav>
    </header>
    <h2 class="pagename"><%= @pagename %></h2>
    <div class="container">
      <div class="contents">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
